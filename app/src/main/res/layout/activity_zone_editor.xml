<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ZoneEditorActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/edit-zone-tv-name"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="8dp"
    />
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp" android:id="@+id/edit-zone-rv-songs"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/edit-zone-btn-ok"
            tools:itemCount="90" tools:listitem="@layout/song_selectable_item_layout"/>
    <TextView
            android:text="MÃºsicas selecionadas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/edit-zone-tv-radius"/>
    <TextView
            android:text="Nome da zona"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/edit-zone-tv-location" android:layout_marginTop="16dp"/>
    <TextView
            android:text="Raio (m)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/edit-zone-tv-name"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/edit-zone-tv-radius" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <Button
            android:text="Salvar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            android:id="@+id/edit-zone-btn-ok" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" style="@style/Widget.AppCompat.Button"/>
    <TextView
            android:text="0, 0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit-zone-tv-location"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            android:textAlignment="textEnd"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent" android:ellipsize="end"/>
</androidx.constraintlayout.widget.ConstraintLayout>